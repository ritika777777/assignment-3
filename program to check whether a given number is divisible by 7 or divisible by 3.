#include<stdio.h>
int main()
{
int a;
printf("enter a number: ");
scanf("%d",&a);
{
    if(a%7==0 && a%3==0)
        printf(" divisible by both 7 and 3");
    else if(a%3==0)
        printf("number is divisible by 3");
    else if(a%7==0 && a%3==0)
        printf(" divisible by both");
    else if(a%7==0)
        printf("number is divisible by 7");
    else
        printf("not divisible by 7 and 3");
}
    return 0;
}
